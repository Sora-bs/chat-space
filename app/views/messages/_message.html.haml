.message
    .upper-info
        %p.group-user
            = message.user.name
        %p.date
            = message.created_at.strftime("%Y/%m/%d %H:%M")
    .text
        - if message.content.present?
            %p.text
            = message.content
        = image_tag message.image.url, class: 'text' if message.image.present?